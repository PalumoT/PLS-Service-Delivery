	getUserFromGroup: function(group){
		var result = "sys_idIN";
		var glideUserGroup = new GlideRecord("sys_user_grmember");
		glideUserGroup.addQuery("group", group);
		glideUserGroup.query();
		
		while(glideUserGroup.next()){
			result += glideUserGroup.getValue("user") + ",";
		}
		
		return result;
	},

    type: 'task_helper'
};]]></script>
