        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var services = current.services_requested.toString().split(",");
	var serviceGroups = current.service_groups.toString().split(",");
	
	for(var i=0; i<services.length; i++){
		var service = services[i];
		
		var glideService = new GlideRecord("x_novrp_pls_service");
		if(glideService.get(service) &&
		   serviceGroups.indexOf(glideService.getValue("parent")) == -1)
		{
			services.splice(i, 1);
		}
	}
	
	current.services_requested = services.join(",");
})(current, previous);]]></script>
