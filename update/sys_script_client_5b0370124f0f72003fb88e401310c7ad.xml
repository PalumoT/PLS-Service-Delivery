		g_form.setValue("business_unit", "");
		g_form.setValue("division", "");
		g_form.setValue("region", "");
		return;
	}
	
	g_form.getReference("customer", function(data){
		g_form.setValue("country", data.country);
		g_form.setValue("region", data.region);
		g_form.setValue("division", data.division);
		g_form.setValue("business_unit", data.business_unit);
	});
