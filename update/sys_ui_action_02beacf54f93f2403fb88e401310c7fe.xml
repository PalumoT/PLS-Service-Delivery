	g_form.setValue("state", 7);
	
	if(g_form.getValue("reason_for_closing") == ""){
		g_form.showFieldMsg("reason_for_closing",
						   "Please select a category before you close the demand",
						   'error');
		return false;
	}
	
	gsftSubmit(null, g_form.getFormElement(), 'close_demand');
}

//Code that runs without 'onclick'
