        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var service = current.service.getRefRecord();
	
	if(!service){
		return;
	}
	
	var currentPrice = parseFloat(current.estimated_price.getReferenceValue());
	var previousPrice = parseFloat(previous.estimated_price.getReferenceValue());
	var totalPrice = parseFloat(service.estimated_price.getReferenceValue()) + currentPrice - previousPrice;
	
	service.estimated_price = service.estimated_price.getReferenceCurrencyCode() + ';' + totalPrice;
	service.update();
})(current, previous);]]></script>
