        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var item = current.catalog_item.getRefRecord();
	var glideTask = new GlideAggregate("x_novrp_pls_catalog_item_task");
	glideTask.addQuery("catalog_item", item.getUniqueValue());
	glideTask.addAggregate("SUM", "estimated_price_dollars");
	glideTask.setGroup(false);
	glideTask.query();
	
	if(glideTask.next()){
		item.estimated_price_dollars = glideTask.getAggregate("SUM", "estimated_price_dollars");
	}
	
	item.update();
})(current, previous);]]></script>
